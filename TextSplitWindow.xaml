<Window x:Class="CorpusTagging.TextSplitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorpusTagging"
        mc:Ignorable="d"
        Title="텍스트 분리" Height="250" Width="450" Closing="Window_Closing" KeyDown="Window_KeyDown">
    <StackPanel>
        <TextBlock Text="분리할 위치에 포커스를 두고 엔터키를 누르세요." HorizontalAlignment="Center" Margin="20
                   "></TextBlock>
        <StackPanel Orientation="Horizontal" Margin="20">
            <TextBlock Text="분리할 위치" Padding="10"></TextBlock>
            <TextBox Width="250" VerticalAlignment="Center" FontSize="20" x:Name="splitTextTxtBox"></TextBox>
        </StackPanel>
        <Button Padding="10" Margin="10,0,0,0" Width="100" x:Name="textSplitBtn" Click="textSplitBtn_Click">분리</Button>
    </StackPanel>
</Window>
