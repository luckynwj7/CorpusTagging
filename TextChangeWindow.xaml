<Window x:Class="CorpusTagging.TextChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorpusTagging"
        mc:Ignorable="d"
        Title="텍스트 변경" Height="200" Width="450" Closing="Window_Closing" KeyDown="Window_KeyDown">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="20">
            <TextBlock Text="변경할 텍스트 입력" Padding="10"></TextBlock>
            <TextBox Width="250" VerticalAlignment="Center" FontSize="20" x:Name="changeTextTxtBox"></TextBox>
        </StackPanel>
        <Button Padding="10" Margin="10,0,0,0" Width="100" x:Name="changeTextBtn" Click="changeTextBtn_Click">변경</Button>
    </StackPanel>
</Window>
