<Window x:Class="CorpusTagging.InputTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorpusTagging"
        mc:Ignorable="d"
        Title="csv 파일 생성" Height="200" Width="450" Closing="Window_Closing">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="20">
            <TextBlock Text="저장할 파일 이름" Padding="10"></TextBlock>
            <TextBox Width="250" VerticalAlignment="Center" FontSize="20" x:Name="saveFileNameTxtBox"></TextBox>
        </StackPanel>
        <Button Padding="10" Margin="10,0,0,0" Width="200" x:Name="savePathSelectBtn" Click="savePathSelectBtn_Click">저장할 경로 선택</Button>
    </StackPanel>
</Window>
